<Window x:Class="DataTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel.Resources>
            <ControlTemplate x:Key="btnTemplate">
                <Border BorderBrush="Black" BorderThickness="2" Margin="3">
                    <StackPanel Margin="6">
                        <Image Source="/Images/Image01.png">
                        </Image>
                        <TextBlock Text="{Binding}"
                                   FontSize="15"
                                   HorizontalAlignment="Center">
                        </TextBlock>
                    </StackPanel>
                </Border>
            </ControlTemplate>

            <Style TargetType="Button">
                <Setter Property="Width" Value="350"></Setter>
                <Setter Property="Height" Value="110"></Setter>
            </Style>
        </StackPanel.Resources>


        <Button x:Name="btn1"
                Template="{StaticResource ResourceKey=btnTemplate}">
        </Button>
        <Button x:Name="btn2"
                Template="{StaticResource ResourceKey=btnTemplate}">
        </Button>
        <Button x:Name="btn3"
                Template="{StaticResource ResourceKey=btnTemplate}">
        </Button>

        <Button Content="Button click"
                Width="200" Height="60"
                FontSize="20"
                Click="Button_Click"></Button>
    </StackPanel>
</Window>

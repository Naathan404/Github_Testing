<Window x:Class="Style.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Style"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="/StyleResources.xaml">
        </ResourceDictionary>
    </Window.Resources>
    
    <StackPanel>
        <DockPanel>
            <DockPanel.Resources>
                <Style TargetType="Button" x:Key="firstStyle">
                    <Setter Property="Background" Value="AliceBlue"></Setter>
                    <Setter Property="Foreground" Value="DeepPink"></Setter>
                </Style>
                <Style TargetType="Button" x:Key="secondStyle">
                    <Setter Property="Background" Value="Green"></Setter>
                    <Setter Property="Foreground" Value="Red"></Setter>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Background" Value="Bisque"></Setter>
                </Style>
            </DockPanel.Resources>

            <Button Content="WPF qua mat day"
                    FontSize="20"
                    Width="180"
                    HorizontalAlignment="Left"
                    Style="{StaticResource firstStyle}">
            </Button>
            <Button Content="Toi met qua"
                    FontSize="20"
                    Width="180"
                    HorizontalAlignment="Right"
                    Style="{StaticResource secondStyle}">
            </Button>
            <Button Content="Ko can style"
                    FontSize="20"
                    Width="180"
                    HorizontalAlignment="Right">
            </Button>

            <TextBox Text="Hehehehehhehehhe"
                     FontSize="24"
                     Width="230"
                     HorizontalAlignment="Center"
                     Padding="0, 50, 0, 50"
                     TextAlignment="Center">
            </TextBox>
        </DockPanel>
        <Grid>
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="AliceBlue"></Setter>
                    <Setter Property="Foreground" Value="DarkOrange"></Setter>
                </Style>
            </Grid.Resources>

            <Button Content="Nut nay cho thay neu nam o grid khac voi grid.resource thi khong duoc style"
                    FontSize="18">
            </Button>
        </Grid>

        <StackPanel>
            <Button Content="Resources from App.xaml"
                    FontSize="30">
            </Button>
        </StackPanel>

        <StackPanel>
            <Button Content="Style from StyleReources.xaml"
                    Style="{StaticResource ResourceKey=btnStyle_ResourceDictionary}"></Button>
        </StackPanel>
    </StackPanel>
    
    <!--Grid.Resources là nguồn tài nguyên của các thẻ trong thẻ Grid
    Grid.Resources có thể được gọi nhiều lần
    Và không chỉ với Grid, các tag khác như stackpanel, dockpanel, canvas cũng có resources
    
    Có thể tạo nhiều style trong 1 resources và thêm từ khóa x:Key="ten"
    Nếu thẻ muốn dùng style thì phải thêm từ khóa Style="{StaticResource tên}"
    Như vậy có thể dùng style nếu muốn mà không cần đưa thẻ qua container khác
    hoặc cũng có thể dùng để style nhiều button nhiều style khác nhau từ resources
    
    Nếu muốn cài resources cho cả ứng dụng thì thêm vào file App.xaml
    
    Ngoài ra cũng có thể tạo style và đưa vào 1 file .xaml do chúng ta tạo ra (resources dictionary)
    Để sử dụng được thì phải thêm Window.Resources-->
</Window>
